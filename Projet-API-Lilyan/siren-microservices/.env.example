# ----------------------------------------------
# MySQL Database
# ----------------------------------------------
MYSQL_ROOT_PASSWORD=change_me_root_password
MYSQL_DATABASE=siren
MYSQL_USER=sirenuser
MYSQL_PASSWORD=change_me_strong_password
MYSQL_PORT=3366

# ----------------------------------------------
# OAuth2 Service
# ----------------------------------------------
OAUTH2_PORT=3000
OAUTH2_CLIENT_ID=client-app
OAUTH2_CLIENT_SECRET=change_me_client_secret

# Utilisateurs OAuth2 (format: username:password)
# En production, utiliser une base de donn√©es
OAUTH2_USER1=user1:change_me_user1_password
OAUTH2_USER2=user2:change_me_user2_password

# ----------------------------------------------
# API MySQL Service
# ----------------------------------------------
API_MYSQL_PORT=3001
OAUTH2_URL=http://oauth2:3000

# ----------------------------------------------
# API Spark Service
# ----------------------------------------------
API_SPARK_PORT=3002

# ----------------------------------------------
# Spark Connect
# ----------------------------------------------
SPARK_CONNECT_PORT=15002
